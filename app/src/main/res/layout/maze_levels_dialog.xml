<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="363dp"
    android:layout_height="525dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/bg_maze_level"
    android:id="@+id/maze_level">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:orientation="horizontal"
        android:layout_gravity="end">


        <TextView
            android:layout_width="235dp"
            android:layout_height="65dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/network"
            android:gravity="center_vertical"
            android:letterSpacing=".1"
            android:text="CATEGORIES"
            android:textColor="#c0c4dd"
            android:textSize="25sp" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/id_close"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="325dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="257dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/ic_close" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="363dp"
        android:layout_height="430dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:orientation="vertical"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:id="@+id/easy_level"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/bg_btn_levels"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:text="CLASSIC"
                    android:gravity="center"
                    android:fontFamily="@font/network"
                    android:textColor="#c0c4dd"
                    android:textFontWeight="@integer/material_motion_duration_long_2"
                    android:letterSpacing=".1"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/medium_level"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/bg_btn_levels"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:text="MONSTER"
                    android:letterSpacing=".1"
                    android:fontFamily="@font/network"
                    android:gravity="center"
                    android:textColor="#c0c4dd"
                    android:textFontWeight="@integer/material_motion_duration_long_2"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/difficult_level"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/bg_btn_levels"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:letterSpacing=".1"
                    android:gravity="center"
                    android:text="HARD ROCK"
                    android:fontFamily="@font/network"
                    android:textColor="#c0c4dd"
                    android:textFontWeight="@integer/material_motion_duration_long_2"
                    android:textSize="25sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

