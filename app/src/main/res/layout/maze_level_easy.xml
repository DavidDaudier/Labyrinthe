<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1b1d2a"
    android:id="@+id/maze_level_easy">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#1b1d2a"
        android:orientation="horizontal"
        android:padding="15sp"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_width="185dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#0091ea"
                android:text="CLASSIC"
                android:textFontWeight="@integer/material_motion_duration_long_2"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:fontFamily="@font/network"
                android:letterSpacing=".1"
                android:textSize="25sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_diamond"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:id="@+id/nb_de_diamant"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textColor="#c0c4dd"
                    android:text="15"
                    android:textFontWeight="@integer/material_motion_duration_long_2"
                    android:fontFamily="@font/agencyb"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:letterSpacing=".2"
                    android:textSize="15sp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginEnd="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_level"
                    android:background="@drawable/bg_btn_replay_and_pause"/>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        android:layout_width="36dp"
                        android:layout_height="20dp"
                        android:textColor="#c0c4dd"
                        android:text="Level"
                        android:fontFamily="@font/agencyb"
                        android:textSize="13sp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:letterSpacing=".1"/>

                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="19"
                        android:fontFamily="@font/agencyb"
                        android:textColor="#c0c4dd"
                        android:textSize="13sp"
                        android:letterSpacing=".1"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginEnd="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_replay"
                    android:background="@drawable/bg_btn_replay_and_pause"/>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textColor="#c0c4dd"
                    android:text="Restart"
                    android:fontFamily="@font/agencyb"
                    android:layout_marginTop="3dp"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:letterSpacing=".1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_btn_replay_and_pause"
                    android:src="@drawable/ic_pause" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textColor="#c0c4dd"
                    android:text="Pause"
                    android:fontFamily="@font/agencyb"
                    android:layout_marginTop="3dp"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:letterSpacing=".1"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>




    <view
        android:id="@+id/view"
        class="com.example.labyrinthe.Views.Maze_level_easy"
        android:layout_width="409dp"
        android:layout_height="620dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">
    </view>



</androidx.constraintlayout.widget.ConstraintLayout>